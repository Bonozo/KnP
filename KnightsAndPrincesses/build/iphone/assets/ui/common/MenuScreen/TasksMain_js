function Leaderboards(e){var t=Titanium.Platform.displayCaps.platformWidth,i=Ti.UI.createView({top:"23%",height:"78%",width:"100%"}),n=[],t=(Titanium.Platform.displayCaps.platformHeight,Titanium.Platform.displayCaps.platformWidth),o=.19*t,a="http://bonozo.com:8080/knp/get_avatar_tasks.php?uid="+e.Record[0].UID,r=require("/ui/common/Functions/function");return r.requestServer({success:function(){items_json=JSON.parse(this.responseText);var t=Ti.UI.createLabel({text:items_json.Record.TASK_DESCRIPTION.NAME,color:"#b3fad0",font:{fontSize:"20dip"},top:"5%",textAlign:"center"});i.add(t);var a=!1;if(void 0!=items_json.Record.TASK_DETAILS){for(var r=items_json.Record.TASK_DETAILS,s=0;s<r.length;s++){var d="",c="";"PENDING"==r[s].STATUS?(a=!0,d="tradeToggle_no.png",c="overlayItemList_highlight.png"):(d="tradeToggle_yes.png",row="overlayItemList.png");var l=Ti.UI.createTableViewRow({height:o,className:"task_list",index:s,SCREEN:r[s].SCREEN,SCREEN_TYPE:r[s].SCREEN_TYPE,ICON_SHADE_LEFT:r[s].ICON_SHADE_LEFT,backgroundImage:"/assets/"+c,zIndex:10});l.addEventListener("click",function(t){if("LIGHTWEIGHT"==t.row.SCREEN_TYPE)Ti.App.fireEvent("menu_changed",{icon_shade_left:t.row.ICON_SHADE_LEFT+"%",screen:t.row.SCREEN});else{var i=require("/ui/common/MenuScreen/"+t.row.SCREEN),n=new i(e);n.open()}});var u=Ti.UI.createImageView({image:"/assets/"+d,width:"10%",left:"2%"});l.add(u);var p=Ti.UI.createLabel({text:r[s].TASK,font:{fontSize:"16dip"},color:"#b3fad0",width:"85%",left:"15%"});l.add(p),n.push(l)}if(a){var g=Ti.UI.createTableView({backgroundColor:"transparent",separatorColor:"transparent",data:n,width:"100%",height:"70%",top:"15%"});i.add(g)}else{var h=Ti.UI.createLabel({text:"You have completed all the tasks. \nNew tasks are in under development.",color:"#b3fad0",font:{fontSize:"18dip"},textAlign:"center"});i.add(h),n=[]}}},method:"GET",contentType:"text/xml",url:a}),i}module.exports=Leaderboards;