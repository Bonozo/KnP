function ShowCraftingRecipe(e,t,i){var n=Titanium.Platform.displayCaps.platformWidth,o=Titanium.UI.createWindow({orientation:Ti.UI.PORTRAIT,height:"80%",width:"80%",navBarHidden:!0,fullscreen:!0}),a=Ti.UI.createView({backgroundImage:"/assets/inventoryBackground.png",width:"100%",height:"100%"});o.add(a);var r=Ti.UI.createView({zIndex:50,height:"8%",top:0,backgroundImage:"/assets/overlayTitleStarCurtains.png"}),s=Ti.UI.createImageView({image:"/assets/iconReturn.png",height:"8%",width:"11.6%",top:"1%",right:"3%",zIndex:600});a.add(s),s.addEventListener("click",function(){o.close()});var d=Ti.UI.createLabel({text:t,color:"#48d48d",font:{fontSize:14},top:"10%",textAlign:"center"});a.add(d);var c=Ti.UI.createLabel({text:e,font:{fontSize:18,fontWeight:"bold"},color:"#48d48d",zIndex:500});r.add(c),a.add(r);var n=Titanium.Platform.displayCaps.platformWidth,l=.136*n,u=[];for(var p in i){var h=Ti.UI.createTableViewRow({height:l,className:"crafting_recipe_detail",zIndex:500}),g=Ti.UI.createLabel({font:{fontSize:"16dip",fontWeight:"bold"},color:"#5afd9b",text:p,left:"5%"});h.add(g);var m=Ti.UI.createLabel({text:i[p]+" Unit(s)",color:"#5afd9b",font:{fontSize:"14dip"},right:"10%"});h.add(m),u.push(h)}var f=Ti.UI.createTableView({backgroundColor:"transparent",separatorColor:"#5afd9b",data:u,width:"100%",height:"72.3%",top:"20%"});return a.add(f),o}module.exports=ShowCraftingRecipe;