function CookingMainGame(e,t){var i=Ti.UI.createWindow({orientation:Ti.UI.PORTRAIT,navBarHidden:!0,fullscreen:!0});i.orientationModes=[Ti.UI.PORTRAIT,Ti.UI.UPSIDE_PORTRAIT];var n=!1,a=(Titanium.Platform.displayCaps.platformWidth,Titanium.UI.createView({width:"100%",height:"100%",backgroundImage:"/assets/games/cooking/oven.png"}));i.add(a);var o=Ti.UI.createImageView({image:"/assets/itemWindow_001.png",opacity:"0.7",width:"80%",height:"15%",left:"2%",bottom:"5%"});a.add(o);var r=Ti.UI.createLabel({text:"Ingredients",color:"#FFF",font:{fontSize:"22dip"},bottom:"18%",left:"5%",textAlign:"center"});a.add(r);var s=[],d=require("/ui/common/Functions/function");return d.requestServer({success:function(){if(s=JSON.parse(this.responseText),void 0!=s.Record){for(var o=5,r=0;r<s.Record.length;r++){var c=Ti.UI.createLabel({text:s.Record[r].AMMOUNT+" "+s.Record[r].NAME,color:"#FFF",font:{fontSize:"16dip"},bottom:"14%",left:o+"%",textAlign:"center"});a.add(c);var l=Ti.UI.createImageView({image:"/assets/"+s.Record[r].IMAGE+".png",width:"10%",height:"10%",bottom:"5%",left:o++ +"%"});l.addEventListener("load",function(){Ti.API.info("Image loaded!")}),a.add(l)}var u=Ti.UI.createButton({color:"#761f56",title:"Bake",bottom:"12%",right:"10%",backgroundImage:"/assets/button_large_UP.png",height:"10%",width:"30%"});u.addEventListener("click",function(){n||(n=!0,d.requestServer({success:function(){s=JSON.parse(this.responseText),void 0!=s.Record&&(n=!1,Ti.App.fireEvent("start_cooking",{cooking_id:s.Record.COOKING_ID,recipe_name:s.Record.RECIPE_NAME,message:s.Record.Message})),i.close()},method:"GET",contentType:"text/xml",url:"http://bonozo.com:8080/knp/start_cooking.php?uid="+e.Record[0].UID+"&recipe_id="+t}))}),a.add(u)}},method:"GET",contentType:"text/xml",url:"http://bonozo.com:8080/knp/get_recipe_ingridients.php?recipe_id="+t}),i}module.exports=CookingMainGame;