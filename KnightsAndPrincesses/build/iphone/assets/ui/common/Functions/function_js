function checkInternetConnection(){return Ti.Network.online}exports.requestServer=function(e){var r=Ti.Network.createHTTPClient();r.onload=e.success,r.onerror=function(e){Ti.API.info("Error Response: "+this.responseText),e.error+"\n"+e.url},r.open(e.method,e.url),"POST"==e.method&&r.setRequestHeader("Content-Type",e.contentType),r.autoEncodeUrl=!1,checkInternetConnection()?"POST"==e.method?r.send(e.param):r.send():(Ti.App.Properties.getBool("internet_error")||alert("No Network."),Ti.App.Properties.setBool("internet_error",!0))};