function OptionsScreen(userinfo){var admin_login=false;var view=Ti.UI.createView({top:"23%",height:"78%",width:"100%",backgroundImage:'/assets/inventoryBackground.png'});var Notification_button='';var get_notification_set_url="http://therealmattharmon.com/knp/get_notification_setting.php?uid="+userinfo.Record[0].UID;var httpclientt=require('ui/iphone/Functions/function');httpclientt.requestServer({success:function(e){items_json=JSON.parse(this.responseText);if(items_json.Record!=undefined){Notification_button.title='NOTIFICATION '+items_json.Record[0].NOTIFICATION;check_notification=items_json.Record[0].NOTIFICATION;}},method:'GET',contentType:'text/xml',url:get_notification_set_url});var selected_menu_label=Ti.UI.createLabel({text:'Options',top:'0%',left:'84.8%',textAlign:'center',color:'#5afd9b',font:{fontSize:'12dip'}});view.add(selected_menu_label);var version_label=Ti.UI.createLabel({text:'v0.3.39',bottom:'16%',left:'84.8%',textAlign:'center',color:'#5afd9b',font:{fontSize:'12dip'}});view.add(version_label);var gender=userinfo.Record[0].GENDER;var user_appearence_view=Ti.UI.createView({height:'85%',right:'60%',left:'0',top:'5%',zIndex:500});if(userinfo.Record[0].USER_APPEARANCE!=undefined&&userinfo.Record[0].USER_APPEARANCE!=''&&userinfo.Record[0].GENDER=='f'){var dress_imageview=Ti.UI.createImageView({height:'100%',width:'100%',top:'0%',image:'/assets/'+userinfo.Record[0].USER_APPEARANCE[3].IMAGE+'.png',});user_appearence_view.add(dress_imageview);var face_imageview=Ti.UI.createImageView({height:'25%',width:'100%',top:'10%',image:'/assets/'+userinfo.Record[0].USER_APPEARANCE[1].IMAGE+'.png',});user_appearence_view.add(face_imageview);var hair_imageview=Ti.UI.createImageView({height:'25%',width:'100%',top:'10%',image:'/assets/'+userinfo.Record[0].USER_APPEARANCE[0].IMAGE+'.png',});user_appearence_view.add(hair_imageview);var jwel_imageview=Ti.UI.createImageView({height:'25%',width:'100%',top:'10%',image:'/assets/'+userinfo.Record[0].USER_APPEARANCE[2].IMAGE+'.png',});user_appearence_view.add(jwel_imageview);}else if(userinfo.Record[0].USER_APPEARANCE!=undefined&&userinfo.Record[0].USER_APPEARANCE!=''&&userinfo.Record[0].GENDER=='m'){var dress_imageview=Ti.UI.createImageView({height:'100%',width:'100%',left:'0%',top:'0%',image:'/assets/knight/'+userinfo.Record[0].USER_APPEARANCE[2].IMAGE+'.png',zIndex:100});user_appearence_view.add(dress_imageview);var helmet_imageview=Ti.UI.createImageView({height:'100%',width:'100%',left:'0',top:'0%',image:'/assets/knight/helmet1.png',zIndex:100});user_appearence_view.add(helmet_imageview);var shield_imageview=Ti.UI.createImageView({height:'100%',width:'100%',left:'0',top:'0%',image:'/assets/knight/shield.png',});user_appearence_view.add(shield_imageview);var face_imageview=Ti.UI.createImageView({height:'20%',width:'100%',left:'0%',top:'19%',image:'/assets/knight/'+userinfo.Record[0].USER_APPEARANCE[1].IMAGE+'.png',});user_appearence_view.add(face_imageview);var hair_imageview=Ti.UI.createImageView({height:'10.9%',width:'100%',left:'0%',top:'22%',image:'/assets/knight/'+userinfo.Record[0].USER_APPEARANCE[0].IMAGE+'.png',});user_appearence_view.add(hair_imageview);var weapon_imageview=Ti.UI.createImageView({height:'100%',width:'100%',top:'0%',image:'/assets/knight/'+userinfo.Record[0].USER_APPEARANCE[3].IMAGE+'.png',});user_appearence_view.add(weapon_imageview);}else{var character_imageview=Ti.UI.createImageView({height:'100%',width:'100%',top:"5%",left:'0%',image:(gender=='m')?'/assets/K_fullbody_bad.png':'/assets/hdpi_female_character_Image2.png',});user_appearence_view.add(character_imageview);}
view.add(user_appearence_view);var actInd=Ti.UI.createActivityIndicator();actInd.message='Loading...';var sound_button=Ti.UI.createButton({top:"7%",right:"5%",height:"9%",title:"SOUND ON",width:"60%",style:Ti.UI.iPhone.SystemButtonStyle.PLAIN,borderColor:"#a42b76",borderRadius:6,borderWidth:3,backgroundGradient:{type:'linear',colors:[' #e49cc9','#a52b76'],startPoint:{x:'50%',y:'100%'},endPoint:{x:'50%',y:'0%'},backFillStart:false}});view.add(sound_button);var Music_button=Ti.UI.createButton({top:"19%",right:"5%",height:"9%",title:"MUSIC ON",width:"60%",style:Ti.UI.iPhone.SystemButtonStyle.PLAIN,borderColor:"#a42b76",borderRadius:6,borderWidth:3,backgroundGradient:{type:'linear',colors:[' #e49cc9','#a52b76'],startPoint:{x:'50%',y:'100%'},endPoint:{x:'50%',y:'0%'},backFillStart:false}});view.add(Music_button);Notification_button=Ti.UI.createButton({top:"31%",right:"5%",height:"9%",title:"NOTIFICATION ",width:"60%",style:Ti.UI.iPhone.SystemButtonStyle.PLAIN,borderColor:"#a42b76",borderRadius:6,borderWidth:3,backgroundGradient:{type:'linear',colors:[' #e49cc9','#a52b76'],startPoint:{x:'50%',y:'100%'},endPoint:{x:'50%',y:'0%'},backFillStart:false}});view.add(Notification_button);Notification_button.addEventListener('click',function(e){alert('This feature is temporarily disabled!')});var Report_button=Ti.UI.createButton({top:"43%",right:"5%",height:"9%",title:"REPORT ABUSE",width:"60%",style:Ti.UI.iPhone.SystemButtonStyle.PLAIN,borderColor:"#a42b76",borderRadius:6,borderWidth:3,backgroundGradient:{type:'linear',colors:[' #e49cc9','#a52b76'],startPoint:{x:'50%',y:'100%'},endPoint:{x:'50%',y:'0%'},backFillStart:false}});view.add(Report_button);var Reset_button=Ti.UI.createButton({top:"55%",right:"5%",height:"9%",title:"RESET GAME",width:"60%",style:Ti.UI.iPhone.SystemButtonStyle.PLAIN,borderColor:"#a42b76",borderRadius:6,borderWidth:3,backgroundGradient:{type:'linear',colors:[' #e49cc9','#a52b76'],startPoint:{x:'50%',y:'100%'},endPoint:{x:'50%',y:'0%'},backFillStart:false}});view.add(Reset_button);Reset_button.addEventListener('click',function(e){var alertDialog=Ti.UI.createAlertDialog({title:'WARNING!',message:'All the data will be Lost.',buttonNames:['OK']});alertDialog.show();alertDialog.addEventListener('click',function(e){ConfirmationAlert.show();});var ConfirmationAlert=Ti.UI.createAlertDialog({title:'Click \'Yes\' to Reset Game.',message:'Are you Sure?',buttonNames:['Yes','No'],cancel:1});ConfirmationAlert.addEventListener('click',function(e){Ti.API.info('e = '+JSON.stringify(e));if(e.cancel===e.index||e.cancel===true){return;}
switch(e.index){case 0:var ResetClass=require('ui/iphone/MenuScreen/ResetClass');var ResetClassscreen=new ResetClass(userinfo);ResetClassscreen.open();actInd.show();var reset_option_url="http://therealmattharmon.com/knp/reset_option.php?uid="+userinfo.Record[0].UID;var httpclientt=require('ui/iphone/Functions/function');httpclientt.requestServer({success:function(e){Ti.App.fireEvent('update_footer',{clicked_item:'OptionScreen'});items_json=JSON.parse(this.responseText);if(items_json.Record!=undefined){if(items_json.Record.Message!=''){alert(items_json.Record.Message);actInd.hide();}}},method:'GET',contentType:'text/xml',url:reset_option_url});break;case 1:break;default:break;}});});return view;};module.exports=OptionsScreen;