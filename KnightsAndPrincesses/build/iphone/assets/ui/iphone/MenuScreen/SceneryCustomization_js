function SceneryCustomization(userinfo){var view=Ti.UI.createView({top:"23%",height:"78%",width:"100%"});var gender=userinfo.Record[0].GENDER;var selected_menu_label=Ti.UI.createLabel({text:'Customize',top:'0%',left:'71%',textAlign:'center',color:'#5afd9b',font:{fontSize:'12'}});view.add(selected_menu_label);var dress_counter=1;var head_counter=1;var hair_counter=1;var jwel_counter=1;var weapon_counter=1;if(userinfo.Record[0].USER_APPEARANCE!=undefined&&userinfo.Record[0].USER_APPEARANCE!=''&&userinfo.Record[0].GENDER=='f'){var dress_split=userinfo.Record[0].USER_APPEARANCE[3].IMAGE.match(/\d/g);var hair_split=userinfo.Record[0].USER_APPEARANCE[0].IMAGE.match(/\d/g);var face_split=userinfo.Record[0].USER_APPEARANCE[1].IMAGE.match(/\d/g);var jwel_split=userinfo.Record[0].USER_APPEARANCE[2].IMAGE.match(/\d/g);dress_counter=dress_split;head_counter=face_split;hair_counter=hair_split;jwel_counter=jwel_split;}else if(userinfo.Record[0].USER_APPEARANCE!=undefined&&userinfo.Record[0].USER_APPEARANCE!=''&&userinfo.Record[0].GENDER=='m'){var dress_split=userinfo.Record[0].USER_APPEARANCE[2].IMAGE.match(/\d/g);var hair_split=userinfo.Record[0].USER_APPEARANCE[0].IMAGE.match(/\d/g);var face_split=userinfo.Record[0].USER_APPEARANCE[1].IMAGE.match(/\d/g);var weapon_split=userinfo.Record[0].USER_APPEARANCE[3].IMAGE.match(/\d/g);dress_counter=dress_split;head_counter=face_split;hair_counter=hair_split;weapon_counter=weapon_split;}
var dress_button;var head_button;var hair_button;var jwel_button;var set_dressing;var head_images='';var dress_images='';var hair_images='';var jwel_images='';var weapon_images='';if(gender=='m'){head_images=7;dress_images=4;hair_images=2;weapon_images=5;}else{head_images=2;dress_images=5;hair_images=2;jwel_images=4;}
if(gender=='m'){var character_imageview1=Ti.UI.createImageView({height:'85.5%',width:'45%',top:'5%',left:'50%',image:'/assets/knight/male_dress'+dress_counter+'.png',zIndex:100});view.add(character_imageview1);character_imageview1.addEventListener('load',function(e){});var helmet_imageview=Ti.UI.createImageView({height:'85.5%',width:'45%',top:'5%',left:'50%',image:'/assets/knight/helmet1.png',zIndex:100});view.add(helmet_imageview);var shield_imageview=Ti.UI.createImageView({height:'85.5%',width:'45%',top:'5%',left:'50%',image:'/assets/knight/shield.png',});view.add(shield_imageview);var face_imageview=Ti.UI.createImageView({height:'15%',width:'45%',top:'20%',left:'50%',image:'/assets/knight/male_face'+head_counter+'.png',});view.add(face_imageview);var hair_front_imageview=Ti.UI.createImageView({height:'20%',width:'52%',top:'16%',left:'47.2%',image:'/assets/knight/male_hair'+hair_counter+'.png',});view.add(hair_front_imageview);var hair_back_imageview=Ti.UI.createImageView({height:'8.9%',width:'10.5%',top:'19%',left:'65%',image:'/assets/knight/male_hair'+hair_counter+'_back.png',});var weapon_imageview=Ti.UI.createImageView({height:'85%',width:'45%',top:'5%',left:'50%',image:'/assets/knight/left_hand'+weapon_counter+'.png',});view.add(weapon_imageview);hair_button=Ti.UI.createButton({backgroundImage:'/assets/button_small_UP.png',title:'Hair '+hair_counter,height:'6%',width:'35%',top:'36%',left:'3%'});view.add(hair_button);hair_button.addEventListener('click',function(e){if(hair_counter==hair_images)
hair_counter=0;hair_counter++;hair_button.title='Hair '+hair_counter;hair_front_imageview.image='/assets/knight/male_hair'+hair_counter+'.png';});head_button=Ti.UI.createButton({backgroundImage:'/assets/button_small_UP.png',title:'Head '+head_counter,height:'6%',width:'35%',top:'26%',left:'3%'});view.add(head_button);head_button.addEventListener('click',function(e){if(head_counter==head_images)
head_counter=0;head_counter++;head_button.title='Head '+head_counter;face_imageview.image='/assets/knight/male_face'+head_counter+'.png';});weapon_button=Ti.UI.createButton({backgroundImage:'/assets/button_small_UP.png',title:'Weapon '+weapon_counter,height:'6%',width:'35%',top:'46%',left:'3%'});view.add(weapon_button);weapon_button.addEventListener('click',function(e){if(weapon_counter==weapon_images)
weapon_counter=0;weapon_counter++;weapon_button.title='Weapon '+weapon_counter;weapon_imageview.image='/assets/knight/left_hand'+weapon_counter+'.png';});set_dressing=Ti.UI.createButton({backgroundGradient:{type:'linear',colors:[' #A42B76','#E39bc8'],startPoint:{x:'50%',y:'100%'},endPoint:{x:'50%',y:'0%'},backFillStart:false},font:{fontSize:'13'},style:Ti.UI.iPhone.SystemButtonStyle.PLAIN,borderColor:'#A42B76',borderRadius:'5',title:'Set Your Appearance ',height:'7%',width:'40%',top:'60%',left:'3%'});view.add(set_dressing);set_dressing.addEventListener('click',function(e){var set_avatar_appearance_url="http://therealmattharmon.com/knp/set_avatar_appearance.php?uid="+userinfo.Record[0].UID+"&gender="+userinfo.Record[0].GENDER+"&hair=male_hair"+hair_counter+"&face=male_face"+head_counter+"&jwel=&dress=male_dress1&weapon=left_hand"+weapon_counter;var httpclientt=require('ui/iphone/Functions/function');httpclientt.requestServer({success:function(e){items_json=JSON.parse(this.responseText);if(items_json.Record!=undefined){Ti.App.fireEvent('new_info',{clicked_item:'SceneryCustomization',userinfojson:items_json});alert("Successfully Updated!");}},method:'GET',contentType:'text/xml',url:set_avatar_appearance_url});});}else{var character_imageview=Ti.UI.createImageView({height:'75.5%',width:'38%',top:'10%',left:'65%',image:'/assets/dress'+dress_counter+'.png',});view.add(character_imageview);character_imageview.addEventListener('load',function(e){});var face_imageview=Ti.UI.createImageView({height:'18.8%',width:'38%',top:'16%',left:'65%',image:'/assets/face'+head_counter+'.png',});view.add(face_imageview);var hair_imageview=Ti.UI.createImageView({height:'18.8%',width:'38%',top:'16%',left:'65%',image:'/assets/hair'+hair_counter+'.png',});view.add(hair_imageview);var jwel_imageview=Ti.UI.createImageView({height:'18.8%',width:'38%',top:'16%',left:'65%',image:'/assets/necklace'+jwel_counter+'.png',});view.add(jwel_imageview);dress_button=Ti.UI.createButton({backgroundImage:'/assets/button_small_UP.png',title:'Dress '+dress_counter,height:'6%',width:'35%',top:'15%',left:'3%'});view.add(dress_button);dress_button.addEventListener('click',function(e){if(dress_counter==dress_images)
dress_counter=0;dress_counter++;dress_button.title='Dress '+dress_counter;character_imageview.image='/assets/dress'+dress_counter+'.png';});head_button=Ti.UI.createButton({backgroundImage:'/assets/button_small_UP.png',title:'Head '+head_counter,height:'6%',width:'35%',top:'26%',left:'3%'});view.add(head_button);head_button.addEventListener('click',function(e){if(head_counter==head_images)
head_counter=0;head_counter++;head_button.title='Head '+head_counter;face_imageview.image='/assets/face'+head_counter+'.png';});hair_button=Ti.UI.createButton({backgroundImage:'/assets/button_small_UP.png',title:'Hair '+hair_counter,height:'6%',width:'35%',top:'36%',left:'3%'});view.add(hair_button);hair_button.addEventListener('click',function(e){if(hair_counter==hair_images)
hair_counter=0;hair_counter++;hair_button.title='Hair '+hair_counter;hair_imageview.image='/assets/hair'+hair_counter+'.png';});jwel_button=Ti.UI.createButton({backgroundImage:'/assets/button_small_UP.png',title:'Jwelery '+jwel_counter,height:'6%',width:'35%',top:'46%',left:'3%'});view.add(jwel_button);jwel_button.addEventListener('click',function(e){if(jwel_counter==jwel_images)
jwel_counter=0;jwel_counter++;jwel_button.title='Jwelery '+jwel_counter;jwel_imageview.image='/assets/necklace'+jwel_counter+'.png';});set_dressing=Ti.UI.createButton({backgroundGradient:{type:'linear',colors:[' #A42B76','#E39bc8'],startPoint:{x:'50%',y:'100%'},endPoint:{x:'50%',y:'0%'},backFillStart:false},font:{fontSize:'13'},style:Ti.UI.iPhone.SystemButtonStyle.PLAIN,borderColor:'#A42B76',borderRadius:'5',title:'Set Your Appearance ',width:'40%',height:'7%',top:'60%',left:'3%'});view.add(set_dressing);set_dressing.addEventListener('click',function(e){var set_avatar_appearance_url="http://therealmattharmon.com/knp/set_avatar_appearance.php?uid="+userinfo.Record[0].UID+"&gender="+userinfo.Record[0].GENDER+"&hair="+hair_counter+"&face="+head_counter+"&jwel="+jwel_counter+"&dress="+dress_counter+"&weapon=";var httpclientt=require('ui/iphone/Functions/function');httpclientt.requestServer({success:function(e){items_json=JSON.parse(this.responseText);if(items_json.Record!=undefined){Ti.App.fireEvent('new_info',{clicked_item:'SceneryCustomization',userinfojson:items_json});alert("Successfully Updated!");}},method:'GET',contentType:'text/xml',url:set_avatar_appearance_url});});}
var decoration_label=Ti.UI.createLabel({text:"DECORATION",textAlign:"center",left:"3%",top:"5%",width:"30%",height:"10%",});var leftarrow_decoration=Ti.UI.createButton({top:"15%",backgroundImage:"/assets/iconControlArrowRight.png",height:"6%",left:"1%",width:"8%"});var rightarrow_decoration=Ti.UI.createButton({top:"15%",backgroundImage:"/assets/iconControlArrowLeft.png",height:"6%",left:"30%",width:"8%"});var style_label=Ti.UI.createLabel({text:"Style",top:"22%",width:"30%",textAlign:"center",left:"3%",height:"10%",});var leftarrow_style=Ti.UI.createButton({top:"32%",backgroundImage:"/assets/iconControlArrowRight.png",height:"6%",left:"1%",width:"8%"});var rightarrow_style=Ti.UI.createButton({top:"32%",backgroundImage:"/assets/iconControlArrowLeft.png",height:"6%",left:"30%",width:"8%"});var Color_label=Ti.UI.createLabel({text:"Color Scheme",top:"40%",width:"30%",textAlign:"center",left:"3%",height:"10%",});var leftarrow_color=Ti.UI.createButton({top:"50%",backgroundImage:"/assets/iconControlArrowRight.png",height:"6%",left:"1%",width:"8%"});var rightarrow_color=Ti.UI.createButton({top:"50%",backgroundImage:"/assets/iconControlArrowLeft.png",height:"6%",left:"30%",width:"8%"});var kandptore=Ti.UI.createButton({bottom:"16%",backgroundImage:"/assets/button_smallLong_HIGHLIGHTED.png",height:"8%",left:"16%",zIndex:5000,title:"K&P Store",width:"35%"});view.add(kandptore);var chips=Ti.UI.createButton({bottom:"15.5%",backgroundImage:"/assets/iconDiceRandom.png",height:"8%",left:"5%",width:"10%"});view.add(chips);kandptore.addEventListener('click',function(e){var kandpwindow=require('ui/iphone/MenuScreen/KandPscreen');var kandpp=new kandpwindow(userinfo);kandpp.open();});return view;};module.exports=SceneryCustomization;