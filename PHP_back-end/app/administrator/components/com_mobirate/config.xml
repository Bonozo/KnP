<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset name="component"
    		label="COM_MOBIRATE_CONFIG_COMPONENT_LABEL"
    		description="COM_MOBIRATE_CONFIG_COMPONENT_DESC">
        <field type="radio" 
        		label="COM_MOBIRATE_ENABLED_GLOBALLY" 
        		name="globalenable"
    	    	description="COM_MOBIRATE_ENABLED_GLOBALLY_DESC">
    	    <option value="0">JNO</option>
    	    <option value="1">JYES</option>
        </field>
	</fieldset>
	<fieldset name="posting"
    		label="COM_MOBIRATE_CONFIG_POSTING_LABEL"
    		description="COM_MOBIRATE_CONFIG_POSTING_DESC">
        <field type="radio" 
        		name="addstatus" 
        		description="COM_MOBIRATE_STATUS_NEW_RATINGS_DESC" 
        		label="COM_MOBIRATE_STATUS_NEW_RATINGS">
    	    <option value="0">JUNPUBLISHED</option>
    	    <option value="1">JPUBLISHED</option>
    	</field>
        <field type="radio" 
        		label="COM_MOBIRATE_SEND_NOTIFICATION_MAIL"
        		name="sendnotifymail" 
        		description="COM_MOBIRATE_SEND_NOTIFICATION_MAIL_DESC">
        	<option value="0">JNO</option>
        	<option value="1">JYES</option>
        </field>
        <field type="text" 
        		label="COM_MOBIRATE_NOTIFICATION_MAIL_ADDRESSES" 
        		name="notifymailaddr" 
        		description="COM_MOBIRATE_NOTIFICATION_MAIL_ADDRESSES_DESC"
        		size="40">
        </field>
        <field type="radio" 
        		label="COM_MOBIRATE_USER_CONFIRM_ADD" 
        		name="alwaysconfirm" 
        		description="COM_MOBIRATE_USER_CONFIRM_ADD_DESC">
        	<option value="0">JNO</option>
        	<option value="1">JYES</option>
        </field>
	</fieldset>
	<fieldset name="dispay"
    		label="COM_MOBIRATE_CONFIG_DISPLAY_LABEL"
    		description="COM_MOBIRATE_CONFIG_DISPLAY_DESC">
        <field type="text" 
        		label="COM_MOBIRATE_NUMBER_OF_RATINGS" 
        		name="nofratings"
    	    	description="COM_MOBIRATE_NUMBER_OF_RATINGS_DESC" 
    	    	size="4">
        </field>
    </fieldset>
    <fieldset name="permissions"
			description="JCONFIG_PERMISSIONS_DESC"
			label="JCONFIG_PERMISSIONS_LABEL">
		<field name="rules" type="rules"
				component="com_mobirate"
				filter="rules"
				label="JCONFIG_PERMISSIONS_LABEL"
				section="component" />
	</fieldset>
</config>